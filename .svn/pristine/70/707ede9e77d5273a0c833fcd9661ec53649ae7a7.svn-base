@px:2.88px;
html,body{
  background: #fff;
}
//<!--头部-->
header{
  position: relative;
  width: 100%;
  height: 135/@px;
  background: #fff;
  border-bottom: 1px solid #d1d1d1;
    >span{
      width: 80/@px;
      height: 60/@px;
      background: url("../images/fanhui.png")no-repeat;
      background-size: 100% 100%;
      display: inline-block;
      position: absolute;
      top: 35/@px;
      left: 40/@px;
  }
}

//<!--内容部分-->
.sC-box{
  padding: 0 28/@px 0 0;
  width: 100%;
  display: flex;
  .sC-box-ul{
    width: 35%;
    background: #eeeeee;
    z-index: 5;
    position: relative;
    >li{
      span{
        margin:0 30/@px;
        text-align: center;
        padding-left: 5/@px;
        line-height: 176/@px;
        border-bottom: 1px solid #bcbcbc;
        font-size: 46/@px;
        display: inline-block;
        width: 80%;
        >i{
          width: 30/@px;
          height: 30/@px;
          border-top: 1px solid #60656b;
          border-right: 1px solid #60656b;
          transform: rotate(45deg);
          display: inline-block;
        }
      }

    }
    >.li-active{
      background: #fff;
      span{
        border: none;
      }
    }
  }
  .sC-box-ol{
    width: 65%;
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    >li{
      text-align: center;
      width: 30%;
      background: #eeeeee;
      margin-left: 3.25%;
      font-size: 36/@px;
      line-height: 100/@px;
      margin-top: 40/@px;
      //margin-left: 30/@px;
    }

  }
  .sC-box-ul-bg{
    width: 34%;
    height: 100%;
    background: #eeeeee;
    position: absolute;
    top: 135/@px;
    left: 0;
    z-index: 1;
  }
}
