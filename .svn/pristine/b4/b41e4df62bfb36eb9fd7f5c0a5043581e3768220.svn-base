@px:2.88px;
html,body{
  background: #fff;
}
//<!--头部-->
header{
  position: relative;
  width: 100%;
  height: 135/@px;
  background: #fff;
  border-bottom: 1px solid #d1d1d1;
    >span{
      width: 80/@px;
      height: 60/@px;
      background: url("../images/fanhui.png")no-repeat;
      background-size: 100% 100%;
      display: inline-block;
      position: absolute;
      top: 35/@px;
      left: 40/@px;
  }
}

//<!--内容部分-->
.sC-box{
  .sC-box-ul{
    position: relative;
    z-index: 5;
    >li{
      .li-target{
        line-height: 150/@px;
        width: 30%;
        background: #eeeeee;
        display: inline-block;
        text-align: center;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        font-size: 42/@px;
        color: #525961;
        .i-active{
          width: 25/@px;
          height: 25/@px;
          border-top: 1px solid #525961;
          border-right: 1px solid #525961;
          display: inline-block;
          position: absolute;
          top:40%;
          right: 20/@px;
          transform: rotate(45deg);
        }
      }
      .li-active{
        background: #fff;
        border-bottom: none;
        color: #c1b480;
      }
      >.sC-box-ul-ol{
        background: #fff;
        padding:3%;
        width: 70%;
        position: absolute;
        top:0;
        right: 0;
        display: flex;
        flex-wrap: wrap;
        >li{
          width: 31%;
          line-height: 100/@px;
          margin-right: 3%;
          margin-bottom: 3%;
          background: #eeeeee;
          text-align: center;
          color: #b1b2b4;
          font-size: 34/@px;
        }
        >li:nth-child(3n+0){
          margin-right: 0%;
        }
        .bac-color{
          background: #c3b380;
          color: #fbfaf6;
        }
      }
      .none{
        display: none;
      }
    }
  }
  #ul-back{
    height: 100%;
    width: 30%;
    position: absolute;
    top: 130/@px;
    left: 0;
    background: #eeeeee;
    z-index: 1;
  }
}
